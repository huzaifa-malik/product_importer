<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Part number</th>
      <th>Branch</th>
      <th>Part price</th>
      <th>Short desc</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.part_number %></td>
        <td><%= product.branch_id %></td>
        <td><%= product.part_price %></td>
        <td><%= product.short_desc %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= form_tag import_from_csv_products_path, multipart: true, method: :put do %>
   <%= file_field_tag :file, :accept => 'text/csv', required: true%>
   <%= check_box_tag 'delete_old_products', checked = true %> Delete the products not mentioned in this file.
   </br>
   </br>
   <%= submit_tag "Import" %>
<% end %>
